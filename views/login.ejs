<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body text-center">
            <h1 class="mb-3">
                <img src="/assets/secure-icon.png" alt="icon" width="20%" />
            </h1>
            <h2>
                Вход
            </h2>
            <%- include ("./messages") %>
            <form action="/auth/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Ваш Email" />
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Ваш пароль" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Войти</button>
            </form>
            <p class="mt-4">
                Новый пользователь? <a href="/auth/register">Регистрация</a>
            </p>
            <p>
                Забыли пароль?<a href="/auth/forgot">Восстановить</a>
            </p>
        </div>
    </div>
</div>